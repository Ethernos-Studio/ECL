{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ECL",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ecl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ecl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ecl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ecl",
              "match": "\\\\[nrt\"'\\\\]"
            },
            {
              "name": "constant.character.escape.unicode.ecl",
              "match": "\\\\u\\{[0-9a-fA-F]+\\}"
            },
            {
              "name": "constant.character.escape.unicode.ecl",
              "match": "\\\\u[0-9a-fA-F]{4}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ecl",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ecl",
          "match": "\\b(if|else|for|while|in|return)\\b"
        },
        {
          "name": "keyword.declaration.ecl",
          "match": "\\b(var|func|expr|import)\\b"
        },
        {
          "name": "keyword.other.ecl",
          "match": "\\b(print|println|input|true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.ecl",
          "match": "\\b(int|str|bool|float|double)\\b"
        },
        {
          "name": "storage.type.declaration.ecl",
          "match": "<(int|str|bool|float|double)>"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.ecl",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.ecl",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.ecl",
          "match": "="
        },
        {
          "name": "keyword.operator.range.ecl",
          "match": "\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.ecl",
          "begin": "\\b(func|expr)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": {
              "name": "keyword.declaration.ecl"
            },
            "2": {
              "name": "entity.name.function.declaration.ecl"
            }
          },
          "end": "\\)",
          "patterns": [
            {
              "include": "#types"
            },
            {
              "include": "#variables"
            }
          ]
        },
        {
          "name": "meta.function-call.ecl",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.call.ecl"
            }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.declaration.ecl",
          "match": "\\bvar\\s+(?:<[^>]+>)?([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        },
        {
          "name": "variable.other.reference.ecl",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.ecl",
          "match": "\\b(true|false)\\b"
        }
      ]
    }
  },
  "scopeName": "source.ecl"
}